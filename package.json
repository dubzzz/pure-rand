{
  "name": "pure-rand",
  "version": "7.0.1",
  "description": " Pure random number generator written in TypeScript",
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    "./distribution/*": {
      "require": "./lib/distribution/*.js",
      "import": "./lib/esm/distribution/*.js"
    },
    "./generator/*": {
      "require": "./lib/generator/*.js",
      "import": "./lib/esm/generator/*.js"
    },
    "./types/*": {
      "require": "./lib/types/*.js",
      "import": "./lib/esm/types/*.js"
    },
    "./utils/*": {
      "require": "./lib/utils/*.js",
      "import": "./lib/esm/utils/*.js"
    }
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "packageManager": "pnpm@10.30.3",
  "scripts": {
    "format:check": "oxfmt --list-different",
    "format": "oxfmt",
    "typecheck": "tsc --noEmit",
    "build": "rolldown -c && cd lib/esm/ && find . -type f -name '*.d.ts' -exec cp --parents {} ../ \\; && cp ../../package.esm-template.json package.json && cd ../..",
    "test": "vitest",
    "build:bench:old": "tsc --outDir lib-reference/",
    "build:bench:new": "tsc --outDir lib-test/",
    "bench": "node perf/benchmark.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dubzzz/pure-rand.git"
  },
  "author": "Nicolas DUBIEN <github@dubien.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dubzzz/pure-rand/issues"
  },
  "homepage": "https://github.com/dubzzz/pure-rand#readme",
  "devDependencies": {
    "@types/node": "^24.10.15",
    "fast-check": "^4.5.3",
    "oxfmt": "^0.35.0",
    "pkg-pr-new": "^0.0.63",
    "publint": "0.3.17",
    "rolldown": "1.0.0-rc.6",
    "rolldown-plugin-dts": "^0.22.2",
    "tinybench": "^6.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "seed",
    "random",
    "prng",
    "generator",
    "pure",
    "rand",
    "mersenne",
    "random number generator",
    "fastest",
    "fast"
  ],
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/dubzzz"
    },
    {
      "type": "opencollective",
      "url": "https://opencollective.com/fast-check"
    }
  ]
}
