{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es3",
    "ignoreDeprecations": "5.0",
    "lib": ["es6", "esnext.bigint"],
    "outDir": "lib/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
