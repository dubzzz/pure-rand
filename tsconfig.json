{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "target": "es3",
        "lib": [
            "es6",
            "esnext.bigint"
        ],
        "outDir": "lib/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
